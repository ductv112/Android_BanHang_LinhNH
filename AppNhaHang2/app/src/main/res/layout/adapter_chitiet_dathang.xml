<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTrang"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_10"
    android:paddingTop="@dimen/size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:paddingBottom="@dimen/size_10">

        <ImageView
            android:id="@+id/imgAnhHangHoa"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenHH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:textColor="@color/colorDo" />

            <TextView
                android:id="@+id/txtTiGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/txtThanhTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:textColor="@color/colorLam" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutSoLuong"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@drawable/bg_white_radius_all"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/text_soluong"
                android:textColor="@color/colorXanhXam" />

            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDiem"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@drawable/bg_white_radius_all"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_diem"
                android:textColor="@color/colorXanhXam" />

            <TextView
                android:id="@+id/txtDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/colorCam" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>