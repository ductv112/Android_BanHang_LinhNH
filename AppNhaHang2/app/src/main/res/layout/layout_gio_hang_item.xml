<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_10">

        <ImageView
            android:id="@+id/imgAnhHangHoa"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenHH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDo" />

            <TextView
                android:id="@+id/txtTiGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/txtThanhTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLam" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layoutSoLuong"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/bg_white_radius_all"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorXanhXam" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_up_down1" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutDiem"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/bg_white_radius_all"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:text="Điểm:"
                android:textColor="@color/colorXanhXam" />

            <TextView
                android:id="@+id/txtDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:text="1"
                android:textColor="@color/colorXanhXam" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_up_down1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtXoa"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_radius_mau_do_all"
            android:gravity="center"
            android:text="Xóa"
            android:textColor="@color/colorDo" />
    </LinearLayout>

</LinearLayout>